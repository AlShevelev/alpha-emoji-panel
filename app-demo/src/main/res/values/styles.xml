<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.TextField.Text" parent="TextAppearance.AppCompat">
        <item name="android:inputType">text</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/bcg_setup_edit_text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/textFieldPadding</item>
    </style>

    <style name="App.TextField.Text.TextWithIcon" parent="App.TextField.Text">
        <item name="android:background">@null</item>
    </style>
</resources>
